{
  "name": "youtube",
  "version": "1.0.0",
  "description": "Web based youtube app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "create" : "npm install && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "9.1.0",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "appId": "com.youtube.app",
    "mac": {
      "target": "dmg",
      "icon": "./assets/youtube.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/youtube.png"
    }
  }
}
